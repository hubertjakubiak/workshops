%tr
  %td= payment.student.first_name
  %td= payment.student.last_name
  %td= payment.amount
  %td= payment.description
  %td= payment.date
  %td
    = link_to payment_path(payment), { title: t('shared.show') } do
      %button.btn.btn-default
        = fa_icon "search"
    = link_to edit_payment_path(payment), { title: t('shared.edit') } do
      %button.btn.btn-default
        = fa_icon "edit"
    = link_to payment_path(payment), { method: :delete, title: t('shared.delete') } do
      %button.btn.btn-default
        = fa_icon "times"
